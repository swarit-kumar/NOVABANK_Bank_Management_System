<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<VBox spacing="20" alignment="CENTER" styleClass="form-container" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bank.gui.ViewClientInfoController">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
    <Label text="View Client Info" styleClass="form-title"/>
    <TextField fx:id="clientIdField" promptText="Client ID"/>
    <Button text="View Info" onAction="#handleViewInfo" styleClass="action-button"/>
    <GridPane fx:id="infoGrid" hgap="10" vgap="10" alignment="CENTER"/>
    <Label fx:id="statusLabel" styleClass="error"/>
</VBox>